{
  "semantic": {
    "shadow": {
      "$type": "shadow",
      "none": { "$value": "none", "$description": "No shadow" },
      "xs": { "$value": "0 1px 2px 0 rgba(0, 0, 0, 0.05)", "$description": "Extra small shadow" },
      "sm": { "$value": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1)", "$description": "Small shadow for cards" },
      "md": { "$value": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1)", "$description": "Medium shadow for dropdowns" },
      "lg": { "$value": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1)", "$description": "Large shadow for modals" },
      "xl": { "$value": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1)", "$description": "Extra large shadow" },
      "2xl": { "$value": "0 25px 50px -12px rgba(0, 0, 0, 0.25)", "$description": "Maximum elevation" },
      "inner": { "$value": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.05)", "$description": "Inset shadow for pressed states" }
    }
  }
}
