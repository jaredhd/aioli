{
  "$description": "Semantic gradient tokens — intent-based gradients referencing primitive colors",
  "semantic": {
    "gradient": {
      "$type": "gradient",
      "primary": {
        "default": { "$value": "linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%)", "$description": "Primary gradient: blue.600 → blue.700" },
        "vibrant": { "$value": "linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1d4ed8 100%)", "$description": "Vibrant primary: blue.500 → blue.600 → blue.700" },
        "subtle": { "$value": "linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%)", "$description": "Subtle primary: blue.50 → blue.100" }
      },
      "success": {
        "default": { "$value": "linear-gradient(135deg, #047857 0%, #065f46 100%)", "$description": "Success gradient: emerald.700 → emerald.800" },
        "subtle": { "$value": "linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%)", "$description": "Subtle success" }
      },
      "warning": {
        "default": { "$value": "linear-gradient(135deg, #b45309 0%, #92400e 100%)", "$description": "Warning gradient: amber.700 → amber.800" },
        "subtle": { "$value": "linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%)", "$description": "Subtle warning" }
      },
      "danger": {
        "default": { "$value": "linear-gradient(135deg, #b91c1c 0%, #991b1b 100%)", "$description": "Danger gradient: red.700 → red.800" },
        "subtle": { "$value": "linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%)", "$description": "Subtle danger" }
      },
      "info": {
        "default": { "$value": "linear-gradient(135deg, #2563eb 0%, #1e40af 100%)", "$description": "Info gradient: blue.600 → blue.800" }
      },
      "surface": {
        "default": { "$value": "linear-gradient(180deg, #ffffff 0%, #f8fafc 100%)", "$description": "Subtle page surface gradient" },
        "card": { "$value": "linear-gradient(180deg, #ffffff 0%, #f8fafc 100%)", "$description": "Card surface gradient" },
        "hero": { "$value": "linear-gradient(135deg, #1e293b 0%, #0f172a 100%)", "$description": "Dark hero section gradient" }
      },
      "accent": {
        "purple": { "$value": "linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%)", "$description": "Purple accent gradient" },
        "indigo": { "$value": "linear-gradient(135deg, #4f46e5 0%, #4338ca 100%)", "$description": "Indigo accent gradient" },
        "teal": { "$value": "linear-gradient(135deg, #0d9488 0%, #0f766e 100%)", "$description": "Teal accent gradient" },
        "rose": { "$value": "linear-gradient(135deg, #e11d48 0%, #be123c 100%)", "$description": "Rose accent gradient" },
        "amber": { "$value": "linear-gradient(135deg, #d97706 0%, #b45309 100%)", "$description": "Amber accent gradient" }
      },
      "mesh": {
        "light": { "$value": "radial-gradient(at 40% 20%, #dbeafe 0px, transparent 50%), radial-gradient(at 80% 0%, #ede9fe 0px, transparent 50%), radial-gradient(at 0% 50%, #d1fae5 0px, transparent 50%)", "$description": "Subtle multi-color mesh for backgrounds" },
        "dark": { "$value": "radial-gradient(at 40% 20%, #1e3a8a 0px, transparent 50%), radial-gradient(at 80% 0%, #4c1d95 0px, transparent 50%), radial-gradient(at 0% 50%, #064e3b 0px, transparent 50%)", "$description": "Dark mesh gradient" }
      }
    }
  }
}
