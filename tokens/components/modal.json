{
  "component": {
    "modal": {
      "overlay": {
        "bg": { "$type": "color", "$value": "rgba(15, 23, 42, 0.5)" },
        "blur": { "$type": "dimension", "$value": "4px" }
      },
      "container": {
        "radius": { "$type": "dimension", "$value": "{primitive.radius.xl}" },
        "bg": { "$type": "color", "$value": "{semantic.surface.card.default}" },
        "shadow": { "$value": "0 25px 50px -12px rgba(0, 0, 0, 0.25)" },
        "border": {
          "width": { "$type": "dimension", "$value": "{primitive.spacing.px}" },
          "color": { "$type": "color", "$value": "{semantic.border.subtle}" }
        },
        "maxHeight": { "$value": "85vh" },
        "margin": { "$type": "dimension", "$value": "{primitive.spacing.4}" }
      },
      "size": {
        "sm": { "$type": "dimension", "$value": "{primitive.spacing.96}" },
        "md": { "$type": "dimension", "$value": "448px" },
        "lg": { "$type": "dimension", "$value": "512px" },
        "xl": { "$type": "dimension", "$value": "640px" },
        "full": { "$value": "calc(100vw - 32px)" }
      },
      "header": {
        "paddingX": { "$type": "dimension", "$value": "{primitive.spacing.6}" },
        "paddingY": { "$type": "dimension", "$value": "{primitive.spacing.4}" },
        "borderColor": { "$type": "color", "$value": "{semantic.border.subtle}" }
      },
      "title": {
        "fontSize": { "$type": "dimension", "$value": "{primitive.font.size.lg}" },
