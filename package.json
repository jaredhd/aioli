{
  "name": "aioli-design",
  "version": "0.6.0",
  "description": "Free, open-source AI design system engine. Natural language to React, Vue, Svelte, or HTML components with WCAG AA accessibility, 1,561 design tokens, and MCP server integration.",
  "type": "module",
  "main": "./lib/index.js",
  "style": "./css/aioli.css",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./lib/index.js"
    },
    "./css": "./css/aioli.css",
    "./css/base": "./css/base.css",
    "./css/tokens": "./dist/css/tokens.css",
    "./css/components": "./css/components/index.css",
    "./css/components/*": "./css/components/*.css",
    "./tokens": "./dist/tokens.json",
    "./kit": "./lib/kit.js",
    "./theme": "./lib/theme.js",
    "./config": "./config.js",
    "./sdk": "./sdk/index.js",
    "./sdk/http": "./sdk/http-client.js",
    "./sdk/direct": "./sdk/direct-client.js",
    "./adapters": "./adapters/index.js",
    "./adapters/react": "./adapters/react.js",
    "./adapters/vue": "./adapters/vue.js",
    "./adapters/svelte": "./adapters/svelte.js",
    "./registry": "./registry/index.js"
  },
  "bin": {
    "aioli": "./bin/aioli.js"
  },
  "files": [
    "lib/",
    "bin/",
    "cli/",
    "agents/",
    "tokens/",
    "css/",
    "types/",
    "adapters/",
    "registry/",
    "api-server/",
    "sdk/",
    "config.js",
    "dist/",
    "docs/",
    "figma/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "demo": "vite --open /demo.html",
    "docs": "vite --open /docs.html",
    "build": "node bin/aioli.js build",
    "build:vite": "vite build",
    "build:site": "npm run build && vite build",
    "preview": "vite preview",
    "build:tokens": "style-dictionary build",
    "build:tokens:watch": "style-dictionary build --watch",
    "clean": "rm -rf dist/*",
    "validate": "node bin/aioli.js validate",
    "tokens:validate": "node scripts/validate-tokens.js",
    "agent:token:test": "node agents/test-token-agent.js",
    "agent:a11y:test": "node agents/test-a11y-agent.js",
    "agent:a11y:audit": "node agents/full-a11y-audit.js",
    "agent:motion:test": "node agents/test-motion-agent.js",
    "agent:orchestrator:test": "node agents/test-orchestrator.js",
    "agent:test:all": "node agents/test-token-agent.js && node agents/test-a11y-agent.js && node agents/test-motion-agent.js && node agents/test-orchestrator.js",
    "audit:themes": "node scripts/theme-contrast-audit.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm run validate && npm run test",
    "api": "node api-server/index.js",
    "api:dev": "node --watch api-server/index.js",
    "studio:api": "node src/studio/api-server.js",
    "studio:dev": "concurrently \"npm run studio:api\" \"npm run dev\"",
    "studio": "npm run studio:dev",
    "mcp": "node mcp-server/index.js",
    "figma:tokens": "node figma/transform-tokens.js",
    "figma:build": "node figma/build-plugin.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaredhd/aioli"
  },
  "homepage": "https://github.com/jaredhd/aioli#readme",
  "bugs": {
    "url": "https://github.com/jaredhd/aioli/issues"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "dtcg",
    "style-dictionary",
    "atomic-design",
    "accessibility",
    "wcag",
    "ai",
    "agents",
    "component-generation",
    "mcp",
    "model-context-protocol",
    "react",
    "vue",
    "svelte",
    "figma",
    "open-source",
    "free"
  ],
  "author": "Jared",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "commander": "^12.0.0",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "prompts": "^2.4.2",
    "style-dictionary": "^4.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supertest": "^7.2.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
